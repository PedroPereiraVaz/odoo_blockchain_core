<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BUSCAR -->
    <record id="blockchain_registry_entry_view_search" model="ir.ui.view">
        <field name="name">blockchain.registry.entry.search</field>
        <field name="model">blockchain.registry.entry</field>
        <field name="arch" type="xml">
            <search string="Blockchain Entries">
                <field name="content_hash"/>
                <field name="tx_hash"/>
                <field name="related_model"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="Errors" name="error" domain="[('status', '=', 'error')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Model" name="group_model" context="{'group_by': 'related_model'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ARBOL -->
    <record id="blockchain_registry_entry_view_tree" model="ir.ui.view">
        <field name="name">blockchain.registry.entry.list</field>
        <field name="model">blockchain.registry.entry</field>
        <field name="arch" type="xml">
            <list string="Blockchain Registry" decoration-info="status == 'pending'" decoration-success="status == 'confirmed'" decoration-danger="status == 'error'" decoration-muted="status == 'revoked'">
                <field name="content_hash"/>
                <field name="related_model"/>
                <field name="status" widget="badge" 
                       decoration-info="status == 'pending'" 
                       decoration-success="status == 'confirmed'" 
                       decoration-danger="status == 'error'"
                       decoration-muted="status == 'revoked'"/>
                <field name="tx_hash" optional="show"/>
                <field name="revocation_tx_hash" optional="hide"/>
                <field name="block_timestamp" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Formulario -->
    <record id="blockchain_registry_entry_view_form" model="ir.ui.view">
        <field name="name">blockchain.registry.entry.form</field>
        <field name="model">blockchain.registry.entry</field>
        <field name="arch" type="xml">
            <form string="Blockchain Entry">
                <header>
                    <button name="action_register" type="object" string="Retry Submission" class="oe_highlight" invisible="status != 'error'"/>
                    <button name="action_verify_on_chain_manual" type="object" string="Verify on Chain" invisible="status not in ['confirmed', 'revoked']"/>
                    <button name="action_revoke" type="object" string="Revoke Document" class="btn-danger" invisible="status != 'confirmed'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,pending,submitted,confirmed,revoked"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="content_hash" readonly="status != 'draft'"/>
                            <field name="related_model" readonly="1"/>
                            <field name="related_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="tx_hash" readonly="1" widget="CopyClipboardChar"/>
                            <field name="block_timestamp" readonly="1"/>
                        </group>
                    </group>
                    <group string="Revocation Info" invisible="not revocation_tx_hash">
                         <group>
                            <field name="revocation_tx_hash" readonly="1" widget="CopyClipboardChar"/>
                            <field name="revocation_date" readonly="1"/>
                         </group>
                    </group>
                    <group invisible="not error_message">
                        <field name="error_message" decoration-danger="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_blockchain_registry_entry" model="ir.actions.act_window">
        <field name="name">Blockchain Registry</field>
        <field name="res_model">blockchain.registry.entry</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents registered yet.
            </p>
        </field>
    </record>
</odoo>
